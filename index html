<script>

const data={

character:[
{name:"Ice Queen",img:"https://picsum.photos/500/300?1",text:"Ratu es penguasa badai salju."},
{name:"Blade Hero",img:"https://picsum.photos/500/300?2",text:"Ksatria pedang legendaris."},
{name:"Forest Elf",img:"https://picsum.photos/500/300?3",text:"Elf penjaga hutan kuno."},
{name:"Shadow Ninja",img:"https://picsum.photos/500/300?4",text:"Pembunuh dari bayangan."}
],

area:[
{name:"Crystal City",img:"https://picsum.photos/500/300?11",text:"Kota kristal bercahaya."},
{name:"Azure Forest",img:"https://picsum.photos/500/300?12",text:"Hutan biru misterius."},
{name:"Golden Desert",img:"https://picsum.photos/500/300?13",text:"Padang pasir emas luas."},
{name:"Frost Peak",img:"https://picsum.photos/500/300?14",text:"Gunung es badai abadi."}
],

support:[
{name:"Healer Fairy",img:"https://picsum.photos/500/300?21",text:"Peri penyembuh cahaya."},
{name:"Battle Priest",img:"https://picsum.photos/500/300?22",text:"Pendeta pelindung tim."}
],

monster:[
{name:"Fire Dragon",img:"https://picsum.photos/500/300?31",text:"Naga api raksasa."},
{name:"Stone Golem",img:"https://picsum.photos/500/300?32",text:"Golem batu penjaga reruntuhan."}
],

item:[
{name:"Legend Sword",img:"https://picsum.photos/500/300?41",text:"Pedang kuno kekuatan besar."},
{name:"Mana Potion",img:"https://picsum.photos/500/300?42",text:"Ramuan pemulih sihir."}
],

magic:[
{name:"Ice Magic",img:"https://picsum.photos/500/300?51",text:"Sihir es pembeku."},
{name:"Thunder Spell",img:"https://picsum.photos/500/300?52",text:"Petir dari langit."}
]

};

let currentCategory="";
let lastList="";

function show(id){
document.querySelectorAll(".page").forEach(p=>p.classList.remove("active"));
document.getElementById(id).classList.add("active");
}

function openCategory(cat){
currentCategory=cat;
lastList=cat;
document.getElementById("catTitle").innerText=cat.toUpperCase();
renderList(data[cat]);
show("listPage");
}

function renderList(list){
const box=document.getElementById("list");
box.innerHTML="";
list.forEach(item=>{
box.innerHTML+=`
<div class="card" onclick="openDetail('${item.name}')">
<img src="${item.img}">
<b>${item.name}</b><br>
<small>${item.text}</small>
</div>`;
});
}

function doSearch(q){
q=q.toLowerCase();
const filtered=data[currentCategory].filter(x=>
x.name.toLowerCase().includes(q) ||
x.text.toLowerCase().includes(q)
);
renderList(filtered);
}

function openDetail(name){
const item=data[currentCategory].find(x=>x.name===name);
document.getElementById("detailTitle").innerText=item.name;
document.getElementById("detailImg").src=item.img;
document.getElementById("detailText").innerText=item.text;
show("detailPage");
}

function backToList(){
show("listPage");
}

</script>

